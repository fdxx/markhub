
<!DOCTYPE html>
<html lang="<%= site['language'] %>">
<head>
   <meta charset="UTF-8">
   <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=yes">
   <meta name="description" content="Tags Page">
   <title>Tags - <%= site['title'] %></title>

   <meta property="og:title" content="<%= site['title'] %>">
   <meta property="og:type" content="website">
   <meta property="og:description" content="Tags Page">

   <link rel="icon" type="image/x-icon" href="<%= site['favicon'] %>">
   <%_ for (const value of site['css']) { _%>
   <link rel="stylesheet" href="<%= value %>">
   <%_ } _%>
</head>
<body>
   <header class="header">
      <nav class="nav_container">
         <div>
            <a href="<%= site['root'] %>" class="nav_title"><%= site['title'] %></a>
         </div>
         <div>
            <%_ let menu_separator = ""; _%>
            <%_ for (const i in navigation) { _%>
            <%- menu_separator %>
            <a href="<%= navigation[i]['link'] %>" class="nav_menu"><%= i %></a>
            <%_ menu_separator = "<span> | </span>"; _%>
            <%_ } _%>
         </div>
      </nav>
   </header>
   <main>
      <header class="postinfo_container" style="text-align: center">
         <div class="postinfo_title"><i class="ri-price-tag-3-line"></i> Tags</div>
      </header>
      <section class="tags_cloud">
         <%_ for (const tag in tagscloud) { _%>
         <div class="tags_cloud_tag"><a href="<%= `${site['root']}tags/${tag}/` %>"><%= `${tag} (${tagscloud[tag].length})` %></a></div>
         <%_ } _%>
      </section>
   </main>
   <footer>
      <%- footer['content'] %>
   </footer>
   <%_ for (const value of site['js']) { _%>
   <script defer src="<%= value %>"></script>
   <%_ } _%>
</body>
</html>


